<IconButton>:
    size_hint: None, None
    size: dp(120), dp(200)
    pos_hint: {'center_x': 0.5}

    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        size: self.minimum_size
        padding: dp(10)
        Image:
            source: root.icon
            size_hint: None, None
            size: dp(100), dp(100)
            allow_stretch: True
            keep_ratio: True
            pos_hint: {'center_x': 0.5}

        # Center the label and button
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, None
            height: self.minimum_height
            Label:
                text: root.text
                size_hint_y: None
                height: self.texture_size[1]
                halign: 'center'
                valign: 'middle'
                text_size: self.width, None
                padding_y: dp(5)

<MainScreen>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1  # Set the color to black (R=0, G=0, B=0, A=1)
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        orientation: 'vertical'
        Label:
            text: 'ScriptFilm'
            size_hint: None, None
            size: self.texture_size[0], dp(60)
            font_size: '24sp'
            pos_hint: {'center_x': 0.5, 'top': 1}

        # This BoxLayout contains the IconButton widgets
        BoxLayout:
            orientation: 'horizontal'
            size_hint: None, None
            size: self.minimum_size  # Make the BoxLayout only as big as needed
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the BoxLayout

            IconButton:
                icon: 'yourself_icon.png'
                text: 'Create\nyourself'
                on_release: app.root.current = 'second'
                # The IconButton will be centered within the BoxLayout automatically

            IconButton:
                icon: 'chat-gpt_icon.png'
                text: 'Create with\nChat GPT'
                on_release: app.root.current = 'fourth'
                # The IconButton will be centered within the BoxLayout automatically


